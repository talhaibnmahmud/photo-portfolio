@model PhotoTest.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-evenly align-items-center">
    <h3>Are you sure you want to delete this?</h3>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

<hr />

<div>
    <div class="card" style="width: 38rem; margin-inline: auto;">
        <img src="/uploads/images/@Html.DisplayFor(model => model.ImagePath)" alt="@Model?.Id" class="card-img-top" />
        <div class="card-body">
            @*<h5 class="card-title">Posted by: @Html.DisplayFor(model => model.User.UserName)</h5>*@
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.CreatedDate)</h6>
            <p class="card-text">@Html.DisplayFor(model => model.Status)</p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
